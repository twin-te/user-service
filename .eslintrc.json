{
  "env": {
      "es2021": true,
      "node": true,
      "jest/globals": true
  },
  "extends": [
      "standard",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "jest"
  ],
  "rules": {
      "node/no-callback-literal": "off"
  }
}